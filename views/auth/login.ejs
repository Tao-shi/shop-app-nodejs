<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/form.css">
<link rel="stylesheet" href="/css/auth.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>
  <main class="main">
    <%- include('../includes/login-error') %>
    <form class="login-form" action="/login" method="post">
      <div class="form-control">
        <label class="form__label" for="email"> E-mail</label><input class="<%= validationError.find(e => e.path === 'email') ? 'invalid' : '' %>" value="<%= oldInput.email %>" type="email" name="email" id="email" />
      </div>
      <div class="form-control">
        <label class="form__label" for="password">Password</label><input class="<%= validationError.find(e => e.path === 'password') ? 'invalid' : '' %> " value = "<%= oldInput.password %>" type="password" name="password" id="password" />
      </div>


      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <button class="btn" type="submit">Login</button>
      <span class="centered">
        <p > Forgot password? Reset <a href="/reset">here</a>.</p>
      </span>
    </form>
  </main>
  <%- include('../includes/end.ejs') %>